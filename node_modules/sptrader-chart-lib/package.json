{
  "name": "sptrader-chart-lib",
  "version": "2.0.20",
  "description": "Professional financial charting library with real-time data, canvas primitives, and smooth transitions",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "pack": "npm pack"
  },
  "peerDependencies": {
    "@mantine/core": ">=7.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "lightweight-charts": "^4.1.0",
    "lodash": "^4.17.21",
    "lwc-plugin-visible-price-range-util": "^0.1.1",
    "xstate": "^5.8.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "keywords": [
    "charts",
    "financial",
    "trading",
    "candlestick",
    "lightweight-charts",
    "react",
    "forex",
    "timescaledb",
    "real-time",
    "websocket",
    "technical-analysis"
  ],
  "author": "Sebastian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sptrader/chart-lib.git"
  },
  "homepage": "https://github.com/sptrader/chart-lib#readme",
  "bugs": {
    "url": "https://github.com/sptrader/chart-lib/issues"
  }
}
