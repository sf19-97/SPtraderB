# Market Data Server (for fetching historical candles)
WS_MARKET_DATA_URL=https://ws-market-data-server.fly.dev

# Database (optional - can use filesystem instead)
DATABASE_URL=postgres://postgres:password@localhost:5432/sptraderb

# Redis (optional - for caching backtest results)
REDIS_URL=redis://localhost:6379

# Server
PORT=3001

# CORS (comma-separated allowed origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
RUST_LOG=info,sptraderb_api=debug

# ===========================================
# GitHub OAuth (Required for authentication)
# ===========================================
# Create an OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# JWT Configuration (Required)
# ===========================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secure-jwt-secret-at-least-32-chars

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://sptraderb.vercel.app
